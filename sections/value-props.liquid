<section class="section section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  {{ 'component-list-social.css' | asset_url | stylesheet_tag }}

  {%- style -%}
    .section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px; }
    @media (min-width: 750px) { .section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; } }
    .vp__grid { display: grid; gap: 16px; grid-template-columns: repeat(4, 1fr); }
    @media (max-width: 989px) { .vp__grid { grid-template-columns: repeat(2, 1fr);} }
    @media (max-width: 749px) { .vp__grid { grid-template-columns: 1fr;} }
    .vp__item { display:flex; gap:12px; align-items: flex-start; padding: 16px; border-radius: var(--text-boxes-radius); border: 1px solid rgba(var(--color-foreground), 0.08); background: rgb(var(--color-background)); }
    .vp__icon .svg-wrapper { width: 28px; height: 28px; }
    .vp__content h3 { margin: 0 0 6px 0; }
    .vp__content p { margin: 0; color: rgba(var(--color-foreground), 0.75); }
  {%- endstyle -%}

  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="title-wrapper center">
        <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.title | escape }}</h2>
      </div>
    {%- endif -%}
    <div class="vp__grid">
      {%- for block in section.blocks -%}
        <div class="vp__item" {{ block.shopify_attributes }}>
          <div class="vp__icon">
            <span class="svg-wrapper">{{ block.settings.icon | default: 'icon-star.svg' | inline_asset_content }}</span>
          </div>
          <div class="vp__content">
            <h3 class="h4">{{ block.settings.heading | escape }}</h3>
            <p class="text-body">{{ block.settings.text }}</p>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Value propositions",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "title", "label": "Heading", "default": "Warum Fairy Handcrafted?" },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "default": "h2",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ]
    },
    { "type": "color_scheme", "id": "color_scheme", "label": "t:sections.all.colors.label", "default": "scheme-1" },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading", "default": "Handgefertigt in Deutschland" },
        { "type": "text", "id": "text", "label": "Text", "default": "Mit Liebe und Sorgfalt gefertigt." },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "icon-heart.svg", "label": "Heart" },
            { "value": "icon-leaf.svg", "label": "Leaf" },
            { "value": "icon-star.svg", "label": "Star" },
            { "value": "icon-truck.svg", "label": "Truck" },
            { "value": "icon-checkmark.svg", "label": "Check" }
          ],
          "default": "icon-heart.svg"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Value propositions",
      "category": "Text",
      "blocks": [{ "type": "item" }, { "type": "item" }, { "type": "item" }, { "type": "item" }]
    }
  ]
}
{% endschema %}
